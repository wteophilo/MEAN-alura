<html>
    <body>
      <div class='erros'>
          <%if(errosValidacao){%>
             <ul>
                 <%for(var i=0;i<errosValidacao.length;i++){%>
                     <li><%=errosValidacao[i].param%> - <%=errosValidacao[i].msg%></li>
                 <%}%>
             </ul>
          <%}%>
      </div>
        <form action="/produtos" method="post">
            <div>
                <label for="titulo">Titulo</label>
                <input type="text" value = "<%=produto.titulo%>" id="titulo" name="titulo" placeholder="coloque o titulo"/>
            </div>
            <div>
                <label for="preco">Preço</label>
                <input type="text" value ="<%=produto.preco%>" id="preco" name="preco" placeholder="150.25"/>
            </div>
            <div>
                <label for="descricao">Descrição</label>
                <textarea cols="20" rows="10" value = "<%=produto.descricao%>"   id="descricao" name="descricao" placeholder="fale sobre o livro"></textarea>
            </div>

            <input type="submit" value="gravar"/>
        </form>
    </body>
</html>
